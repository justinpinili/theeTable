html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title theeTable
    link(rel="shortcut icon" type="image/png" href="assets/favicon.ico")
    link(href="library/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="library/bootstrap-material-design/dist/css/ripples.min.css" rel="stylesheet")
    link(href="library/bootstrap-material-design/dist/css/material-wfont.min.css" rel="stylesheet")
    link(href="library/angular-emoji-filter-hd/dist/emoji.min.css" rel="stylesheet")
    link(href="assets/snackbar/snackbar.min.css" rel="stylesheet")
    link(href="all.css" rel="stylesheet")
    link(href="assets/styles/rzslider.css" rel="stylesheet")

  body(ng-app="theeTable")
    .theeTable(ng-controller="mainController")
      .thee-table(ng-if="showApp") 
        .navbar.navbar-fixed-top.navbar-default.main-navbar(role="navigation")
          .container-fluid
            .navbar-header
              button.navbar-toggle.collapsed(type="button"
                data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href="" ng-click="credits()")
                i.mdi-hardware-speaker.big-icon.tt-icon
                | Thee Table. ( v0.1)

            .collapse.navbar-collapse#bs-example-navbar-collapse-1
              ul.nav.navbar-nav.navbar-right(ng-if="currentUser")
                li
                  a(ui-sref="rooms" ng-if="inRoom()")
                    span.mdi-av-replay.md-icon
                    | &nbsp;&nbsp;Back to Rooms
                li
                  a(ui-sref="logout")
                    span.glyphicon.glyphicon-log-out.md-icon
                    | &nbsp;&nbsp;Logout
      ui-view
    
    script.
      var scID = !{JSON.stringify(scID)};
      var ttURL = !{JSON.stringify(ttURL)};

    script(src="https://w.soundcloud.com/player/api.js" type="text/javascript")
    script(src="https://connect.soundcloud.com/sdk.js")

    script(src="/socket.io/socket.io.js")

    script(type="text/javascript" src="library/jquery/dist/jquery.min.js")
    script(type="text/javascript" src="library/jquery-ui/jquery-ui.min.js")
    script(type="text/javascript" src="library/bootstrap/dist/js/bootstrap.min.js")
    script(type="text/javascript" src="library/bootstrap-material-design/dist/js/ripples.min.js")
    script(type="text/javascript" src="library/bootstrap-material-design/dist/js/material.min.js")
    script(type="text/javascript" src="assets/snackbar/snackbar.min.js")
    script(type="text/javascript" src="library/angular/angular.min.js")
    script(type="text/javascript" src="library/ui-router/release/angular-ui-router.min.js")
    script(type="text/javascript" src="library/angular-local-storage/dist/angular-local-storage.min.js")
    script(type="text/javascript" src="library/angular-ui-bootstrap-bower/ui-bootstrap-tpls.min.js")
    script(type="text/javascript" src="library/angular-ui-sortable/sortable.min.js")
    script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-sanitize.min.js")
    script(type="text/javascript" src="library/angular-emoji-filter-hd/dist/emoji.min.js")
    
    script(type="text/javascript" src="all.js")
